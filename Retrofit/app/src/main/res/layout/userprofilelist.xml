<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/action_view"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackStar"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_star_black_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whiteStar"
            android:padding="10dp"
            android:visibility="visible"
            android:src="@drawable/ic_star_border_black_24dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/default_image"
        android:layout_toLeftOf="@+id/action_view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Testing"
            android:textColor="#47525e"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/rep_name">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Testing"
            android:textSize="15dp"
            android:layout_below="@+id/rep_name"
            android:id="@+id/rep_lang">
        </TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_merge_type_black_24dp"
        android:id="@+id/default_image"/>
</RelativeLayout>